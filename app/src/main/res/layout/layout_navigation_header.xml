<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorQuickActionsBackground">

    <ImageView
        android:id="@+id/nav_menu_header_illustration"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/illustration_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_menu_header_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu_header_illustration"
        app:layout_constraintStart_toStartOf="@+id/nav_menu_header_illustration"/>

    <TextView
        android:id="@+id/nav_menu_header_app_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/don_t_bother_remembering"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:textStyle="normal"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nav_menu_header_app_name"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu_header_app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>